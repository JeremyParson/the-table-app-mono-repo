{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "preserveConstEnums": true,
    },
    "include": [
        "src/**/*"
    ]
}